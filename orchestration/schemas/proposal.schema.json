{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://mcp.internal/schemas/proposal.json",
    "title": "Multi-Agent Proposal Schema",
    "description": "MCP Communication schema for agent proposals - Claude-4.5 Opus Orchestration",
    "type": "object",
    "required": [
        "proposal_id",
        "origin",
        "timestamp",
        "target_files",
        "symptom",
        "patches",
        "metadata"
    ],
    "properties": {
        "proposal_id": {
            "type": "string",
            "format": "uuid",
            "description": "Unique identifier for this proposal"
        },
        "origin": {
            "type": "string",
            "pattern": "^agent-[a-z0-9-]+$",
            "description": "Agent that created this proposal"
        },
        "timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "ISO 8601 timestamp of proposal creation"
        },
        "target_files": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "path"
                ],
                "properties": {
                    "path": {
                        "type": "string"
                    },
                    "start": {
                        "type": "integer",
                        "minimum": 1
                    },
                    "end": {
                        "type": "integer",
                        "minimum": 1
                    }
                }
            }
        },
        "symptom": {
            "type": "object",
            "properties": {
                "test_id": {
                    "type": "string"
                },
                "error": {
                    "type": "string"
                },
                "repro_cmd": {
                    "type": "string"
                },
                "severity": {
                    "type": "string",
                    "enum": [
                        "critical",
                        "high",
                        "medium",
                        "low"
                    ]
                }
            }
        },
        "evidence": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string",
                        "enum": [
                            "log",
                            "trace",
                            "screenshot",
                            "metric"
                        ]
                    },
                    "path": {
                        "type": "string"
                    },
                    "hash": {
                        "type": "string",
                        "pattern": "^sha256:[a-f0-9]{64}$"
                    }
                }
            }
        },
        "patches": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "diff"
                ],
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "diff": {
                        "type": "string"
                    },
                    "risk": {
                        "type": "string",
                        "enum": [
                            "low",
                            "medium",
                            "high"
                        ]
                    },
                    "rollback_plan": {
                        "type": "string"
                    }
                }
            }
        },
        "votes": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "agent",
                    "vote",
                    "confidence"
                ],
                "properties": {
                    "agent": {
                        "type": "string"
                    },
                    "vote": {
                        "type": "string",
                        "enum": [
                            "accept",
                            "reject",
                            "abstain"
                        ]
                    },
                    "confidence": {
                        "type": "number",
                        "minimum": 0,
                        "maximum": 1
                    },
                    "reasoning": {
                        "type": "string"
                    }
                }
            }
        },
        "final_decision": {
            "type": "string",
            "enum": [
                "pending",
                "accept",
                "reject",
                "escalated",
                "needs_human"
            ]
        },
        "artifacts": {
            "type": "array",
            "items": {
                "type": "string",
                "format": "uri"
            }
        },
        "metadata": {
            "type": "object",
            "required": [
                "model"
            ],
            "properties": {
                "model": {
                    "type": "string"
                },
                "prompt_snapshot": {
                    "type": "string"
                },
                "temperature": {
                    "type": "number"
                },
                "seed": {
                    "type": "integer"
                },
                "runtime_ms": {
                    "type": "integer"
                }
            }
        }
    }
}